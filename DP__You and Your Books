class Solution{
    public:
    /*You are requried to complete this method */
    int max_Books(int a[], int n, int k)
    {  int res=0,i=0;
       while(i<n)
       {  if(k<a[i])
            ++i;
          else
          {  int x=0;
             while(i<n && a[i]<=k)
              x+=a[i++];
             res=max(res,x);
          }
       }
       return res;
    }
};
