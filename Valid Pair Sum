class Solution{
    
    public:
    long long fun(int x,int k,int n,int a[])
     {  if(x>=0)
           return n-k;
        int l=0,r=n-1,idx=n;
        x=-x;
        while(l<=r)
        {  int mid=(l+r)/2;
           if(x<a[mid])
             {  idx=mid;
                r=mid-1; 
             }
           else //  a[mid]
            l=mid+1;
        }
        return n-idx;
     }
    long long ValidPair(int a[], int n) 
    {   sort(a,a+n);
        long long res=0;
        for(int i=0;i<n-1;++i)
          res+=fun(a[i],i+1,n,a);
        return res;
    }   
};
