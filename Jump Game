class Solution {
  public:
    int canReach(int a[], int n) {
        int max_reacheable_idx=a[0];
        for(int i=1;i<n;++i)
        {  if(max_reacheable_idx<i)
             return 0;
           max_reacheable_idx=max(max_reacheable_idx,i+a[i]);
        }
        return (n-1<=max_reacheable_idx);
    }
};
