class Solution {
public:
    void fun(TreeNode* root,int &sum)
    {  if(root==NULL)
          return;
       fun(root->right,sum);
         root->val=root->val+sum;
         sum=root->val;
       fun(root->left,sum);
    }
    TreeNode* bstToGst(TreeNode* root) {
        int sum=0;
        fun(root,sum);
        return root;
    }
};
